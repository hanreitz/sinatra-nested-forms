<!DOCTYPE html>
<html>
  <head>
    <title>New Pirate Form</title>
  </head>

  <body>
    <h1>New Pirate</h1>
    <form action="/pirates" method="post">
      <label for="pirate_name">Pirate Name</label>
      <input type="text" name="pirate[name]"><br>
      <label for="pirate_weight">Pirate Weight</label>
      <input type="text" name="pirate[weight]"></br>
      <label for="pirate_height">Pirate Height</label>
      <input type="text" name="pirate[height]"></br>
      <label for="ship_1_name">Ship 1 Name</label>
      <input id="ship_name_1" type="text" name="pirate[ships][][name]"></br>
      <label for="ship_1_type">Ship 1 Type</label>
      <input id="ship_type_1" type="text" name="pirate[ships][][type]"></br>
      <label for="ship_1_booty">Ship 1 Booty</label>
      <input id="ship_booty_1" type="text" name="pirate[ships][][booty]"></br>
      <label for="ship_1_name">Ship 2 Name</label>
      <input id="ship_name_2" type="text" name="pirate[ships][][name]"></br>
      <label for="ship_1_type">Ship 2 Type</label>
      <input id="ship_type_2" type="text" name="pirate[ships][][type]"></br>
      <label for="ship_1_booty">Ship 2 Booty</label>
      <input id="ship_booty_2" type="text" name="pirate[ships][][booty]"></br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
